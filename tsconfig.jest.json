{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "types": ["jest", "node", "@testing-library/jest-dom"],
      "isolatedModules": true
    },
    "include": [
      "src/**/*.ts", 
      "src/**/*.tsx",
      "src/__tests__/**/*.ts",
      "src/__tests__/**/*.tsx",
      "jest.config.mjs",
      "src/setupTests.ts"
    ],
    "exclude": ["node_modules"]
  }